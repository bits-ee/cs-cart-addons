<?xml version="1.0"?>
<addon scheme="2.0">
    <id>bd_pickup_providers</id>
    <name>[BergDigital.ch] Pickup providers</name>
    <description>Pickup points for Itella Smartpost, Omniva and DPD</description>
    <version>1.0</version>
    <default_language>en</default_language>
    <priority>9999</priority>
    <status>active</status>
    <dependencies/>
    <compatibility>
    <php_version>
        <min>5.3.0</min>
    </php_version>
    </compatibility>
    <authors>
        <author>
            <name>Zahhar Kirillov</name>
            <email>zahhar@gmail.com</email>
            <url>https://bergdigital.ch</url>
        </author>
    </authors>
    <supplier>BergDigital.ch</supplier>
    <supplier_link>https://bergdigital.ch</supplier_link>
    <queries>
        <item for="install">ALTER TABLE `?:shippings` ADD `bd_pickup_provider` varchar(255) NOT NULL DEFAULT "";</item>
        <item for="install">ALTER TABLE `?:orders` ADD `bd_pickup_provider_data` TEXT DEFAULT NULL;</item>
        <item for="uninstall">ALTER TABLE `?:shippings` DROP COLUMN `bd_pickup_provider`;</item>
        <item for="uninstall">ALTER TABLE `?:orders` DROP COLUMN `bd_pickup_provider_data`;</item>
    </queries>
    <language_variables>
        <item id="addons.bd_pickup_providers.pickup_provider" lang="en">Pickup service provider</item>
        <item id="addons.bd_pickup_providers.pickup_point" lang="en">Pickup point</item>
    </language_variables>
</addon>